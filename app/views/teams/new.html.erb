<div class="cb-section">
  <div class="cb-container mw6">
    <h1>Connect <%= @space.name %> to Slack</h1>
    <p>
      In order to connect your Cobot space to Slack, please <a href="http://slack.com" target="_blank">create a Slack account</a> first.
    </p>
    <%= form_for [@space, @team] do |f| %>
      <div class="mb3">
        <%= f.label :name, 'Name', class: "admin-label" %>
        <%= f.text_field :name, required: true, class: 'input--stretch' %><br>
      </div>
      <div class="mb3">
        <%= f.label :slack_token, 'Slack Team Token', class: "admin-label" %>
        <%= f.text_field :slack_token, required: true, class: 'input--stretch' %><br>
        <p class="form-underline">
          You can find your token on
          <a href="https://api.slack.com/custom-integrations/legacy-tokens" target="_blank">api.slack.com</a>.
        </p>
      </div>
      <div class="mb3">
        <%= f.label :slack_url, 'Slack Team URL', class: "admin-label" %>
        <p>http://<%= f.text_field :slack_url, type: 'text', required: true, pattern: '[a-z0-9-]+',
          class: '',
          placeholder: @space.subdomain %>.slack.com
        </p>
      </div>
      <div class="mb3">
        <div class="flex items-center">
          <%= f.check_box :invite_existing_members, class: "mr3" %>
          <%= f.label :invite_existing_members, 'Invite existing members', class: "db" %>
        </div>
        <div class="flex items-center">
          <%= f.check_box :remove_canceled_members, class: "mr3" %>
          <%= f.label :remove_canceled_members, 'Remove canceled members<br /><span class="tc--text-05">only works with a paid Slack account</span>'.html_safe, class: "db" %>
        </div>
      </div>
      <p><%= f.submit value: 'Add Team', class: 'btn btn--primary btn--full btn--stretch' %></p>
    <% end %>
    <p><%= link_to 'back', :spaces, class: 'link--back' %></p>
  </div>
</div>
